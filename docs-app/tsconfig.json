{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "docs-app/tests/*": [
        "tests/*"
      ],
      "docs-app/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    },
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$",
          "noUncheckedIndexedAccess": true
        }
      }
    ]
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "glint": {
    "environment": "ember-loose"
  }
}
